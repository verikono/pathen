{
	"extends": "@tsconfig/strictest/tsconfig.json",
	"compileOnSave": true,
	"compilerOptions": {
		"module": "ESNext",
		"lib": [ "ESNext", "ES2017.TypedArrays" ],
		"target": "ESNext",
		"moduleResolution": "NodeNext",
		"baseUrl": "source",
		"rootDir": ".",
		"outDir": "dist",
		"alwaysStrict": true,
		"declaration": true,
		"declarationDir": "dist/types",
		"experimentalDecorators": true,
		"composite": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": true,
		"strict": true,
		"types": [
			"vitest/importMeta"
		]
	},
	"include": [
		"source/**/*.mts"
	]
}
